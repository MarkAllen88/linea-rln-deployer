    "clean": "npx hardhat clean --config ./hardhat.config.cjs"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "hardhat": "^2.22.6"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ethers": "^6.13.1"
  }
}

